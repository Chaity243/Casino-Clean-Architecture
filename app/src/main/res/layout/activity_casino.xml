<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_top_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context=".presentation.ui.casino.CasinoActivity">

    <com.chaitanya.casino.spinningwheel.RouletteView
        android:id="@+id/wheel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:wheel_arrow_color="@android:color/black"
        app:wheel_arrow_height="35dp"
        app:wheel_arrow_width="20dp"
        app:wheel_colors="@array/rainbow_dash"
        app:wheel_items="@array/wheelItems"
        app:wheel_stroke_color="@android:color/black"
        app:wheel_stroke_width="5dp" />

    <Button
        android:id="@+id/rotate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimary"
        android:text="@string/txtBtnRotate"
        android:textColor="@color/colorWhite" />
</RelativeLayout>
